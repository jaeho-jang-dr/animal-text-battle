rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    // AuthContext writes to this directly to sync user data
    match /users/{userId} {
      allow read: if true; // Allow public profiles (names, etc.)
      allow create, update: if isOwner(userId); // Only owner can write their own data
      allow delete: if false; // Deletion only via Admin
    }

    // Characters collection
    // Mostly handled via API (Admin SDK), but in case of client usage
    match /characters/{characterId} {
      allow read: if true; // Public can see characters (for battles)
      // Allow create if user is signed in and sets themselves as owner
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow update/delete if user owns the character (checks existing data)
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Battles collection
    // Mostly handled via API
    match /battles/{battleId} {
      allow read: if true; // Public can see battles
      allow write: if false; // Writes must go through API
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

# Production environment variables for Vercel deployment
# Don't use SQLite in production
USE_SQLITE=false

# PostgreSQL Database URL (Neon.tech or Vercel Postgres)
# Replace with your actual database URL from Neon.tech
DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require

# OpenAI API Key for battle judgments
OPENAI_API_KEY=your-openai-api-key-here

# System token for API authentication
SYSTEM_API_TOKEN=your-secure-production-token-here

# Admin default password (change this in production!)
ADMIN_DEFAULT_PASSWORD=secure-admin-password-2025

# Node environment
NODE_ENV=production

# Next.js public variables
NEXT_PUBLIC_APP_NAME=동물 친구들 배틀
NEXT_PUBLIC_APP_URL=https://your-app-name.vercel.app